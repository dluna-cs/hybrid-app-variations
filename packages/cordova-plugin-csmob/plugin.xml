<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-csmob"
    version="0.0.1">
    <name>Cordova CS Mobile</name>
    <description>Cordova Cs Mobile Plugin for Experimentation</description>
    <license>Apache 2.0</license>
    <keywords>cordova,assets</keywords>
    
    <asset src="www/web-view-tracking-tag-dev.min.js" target="js/wv_tag.js" />
    <js-module src="www/CsMobPlugin.js" name="CsMobPlugin">
        <clobbers target="CsMobPlugin" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="CsMob" >
                <param name="android-package" value="com.variations.cordova.csmob.CDVCsMobPlugin"/>
            </feature>
        </config-file>
        <framework src="com.contentsquare.android:library:4.12.0" />
        <source-file src="src/android/CDVCsMobPlugin.java" target-dir="src/com/variations/cordova/csmob" />
    </platform>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="CDVCsMobPlugin">
                <param name="ios-package" value="CDVCsMobPlugin"/>
            </feature>
        </config-file>
        <podspec>
            <pods use-frameworks="true">
                <pod name="CS_iOS_SDK_STATIC" spec="4.15.1"/>
            </pods>
        </podspec>
        <dependency id="cordova-plugin-add-swift-support" version="2.0.2"/>
        <source-file src="src/ios/CDVCsMobPlugin.swift" />
        <source-file src="src/ios/CommandHandlerProtocol.swift" />
        <source-file src="src/ios/CommandHandleUrl.swift" />
        <source-file src="src/ios/CommandOptIn.swift" />
        <source-file src="src/ios/CommandOptOut.swift" />
        <source-file src="src/ios/CommandSendDynamicVar.swift" />
        <source-file src="src/ios/CommandSendScreenName.swift" />
        <source-file src="src/ios/CommandSendTransaction.swift" />
    </platform>
</plugin>
